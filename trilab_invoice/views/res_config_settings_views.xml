<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']/div[@name='main_currency_setting_container']" position="inside">
                <div class="col-12 col-md-6 o_setting_box" groups="account.group_account_manager">
                    <div class="o_setting_left_pane">
                        <field name="x_enable_invoice_rate_change"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="x_enable_invoice_rate_change"/>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                              groups="base.group_multi_company"/>
                        <div class="text-muted">
                            Change currency rate for invoices in foreign currencies according to sale date.
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
